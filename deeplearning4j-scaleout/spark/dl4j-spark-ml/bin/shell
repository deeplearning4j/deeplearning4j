FWDIR="$(cd "`dirname "$0"`"/..; pwd)"
export EXAMPLES_DIR="$FWDIR"

if [ -n "$1" ]; then
  EXAMPLE_SCRIPT="$1"
  shift
else
  echo "Usage: ./bin/shell <script>" 1>&2
  echo "  - set MASTER=XX to use a specific master" 1>&2
  echo "  - can use abbreviated script name relative to scripts/" 1>&2
  echo "     (e.g. binary)" 1>&2
  exit 1
fi

for f in "${FWDIR}"/scripts/"${EXAMPLE_SCRIPT}".scala; do
  if [[ -e "$f" ]]; then
    EXAMPLE_SCRIPT="$f"
  fi
done

if [ -f "$FWDIR/RELEASE" ]; then
  JAR_PATH="${FWDIR}/lib"
else
  JAR_PATH="${EXAMPLES_DIR}/target"
fi

for f in "${JAR_PATH}"/dl4j-spark-ml-*-assembly.jar; do
  if [[ ! -e "$f" ]]; then
    echo "Failed to find Spark ML assembly in $FWDIR/lib or $FWDIR/target" 1>&2
    echo "You need to build the library before running this program" 1>&2
    exit 1
  fi
  SPARK_ML_JAR="$f"
done

export SPARK_ML_JAR

# -Djava.awt.headless=true
EXAMPLE_MASTER=${MASTER:-"local[*]"}

exec spark-shell \
  --jars "$SPARK_ML_JAR" \
  --driver-memory 4G \
  -i "$EXAMPLE_SCRIPT" 
