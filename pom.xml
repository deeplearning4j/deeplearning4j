            </activation>
            <distributionManagement>
                <snapshotRepository>
                    <id>s3-repo</id>
                    <name>s3-repo</name>
                    <url>s3://${s3.repo.url}</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
        <profile>
            <id>skymindnexus-skil</id>
            <activation>
